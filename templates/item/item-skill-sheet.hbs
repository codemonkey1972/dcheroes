<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
 
      <div class="resources grid grid-4col">

        <div class="resource flex-group-center">
          <label for="system.currentBody.value" class="resource-label">{{localize 'Base'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.baseCost" value="{{system.baseCost}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.currentBody.value" class="resource-label">{{localize 'Factor'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.factorCost" value="{{system.factorCost}}" data-dtype="Number"/>
           </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.currentBody.value" class="resource-label">{{localize 'APs'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.aps" value="{{system.aps}}" data-dtype="Number"/>
           </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.currentBody.value" class="resource-label">{{localize 'Total'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <span>{{system.totalCost}}</span>
          </div>
        </div>

      </div>
 
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="characteristics">Characteristics</a>
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="subskills">Subskills</a>
    <a class="item" data-tab="attributes">Attributes</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    <div class="tab" data-group="primary" data-tab="characteristics">

      <section class="attributes grid grid-3col">

        <div class="attribute flex-group-center">
          <label for="system.link" class="resource-label rollable flexlarge align-left" data-label="{{localize 'Linked Attribute'}}">{{localize 'Link'}}</label>
          <div>
          <select  class="resource-select"  name="system.link" data-type="String">
            {{#select system.link}}
                {{#each attributes as |attribute key|}}
                <option  value="{{key}}">{{attribute.label}}</option>
                {{/each}}
            {{/select}}
          </select>
          </div>
        </div>

        <div class="attribute flex-group-center">
          <label for="system.range" class="resource-label rollable flexlarge align-left" data-roll="d20+@heroPoints.mod" data-label="{{system.range}}">{{localize 'Range'}}</label>
          <input type="text" name="system.range" value="{{system.range}}" data-dtype="Number"/>
        </div>

        <div class="attribute flex-group-center">
          <label for="system.type" class="resource-label rollable flexlarge align-left" data-label="{{localize 'Type'}}">{{localize 'Type'}}</label>
           <div>
          <select  class="resource-select"  name="system.type" data-type="String">
            {{#select system.type}}
              {{#each system.powerTypes as |powerType key|}}
            <option value="{{key}}">{{powerType}}</option>
              {{/each}}
            {{/select}}
          </select>
          </div>
        </div>
              
      </section>

    </div>

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">

      {{!-- To render inline rolls in a TinyMCE editor, you need to pass the parent actor's (if any) roll data to the rollData prop. --}}
      {{editor system.description target="system.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Subskills Tab --}}
    <div class="tab subskills" data-group="primary" data-tab=" ">

    <ol class='items-list'>
      <li class='item flexrow items-header'>
        <div class='item-name'>{{localize 'Name'}}</div>
        <div class='item-description'>{{localize 'Description'}}</div>
        <div class='item-controls'>
          <a
            class='item-control power-create'
            title='{{localize "DOCUMENT.Create" type='Power'}}'
            data-type='power'
          >
            <i class='fas fa-plus'></i>
            {{localize 'DOCUMENT.New' type='item'}}
          </a>
        </div>
      </li>
    
    {{#each subskills as |subskill id|}}
    {{#if doesSubskillBelongToSkill subskill.link }}
      <li class='item flexrow item-row' data-item-id='{{subskill._id}}'>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img
                src='{{subskill.img}}'
                title='{{subskill.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Update" type='Subskill'}}'
          >
            {{item.name}}
          </a>
        </div>
        <div class='item-formula item-prop'>{{system.shortDescription}}</div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Update" type='Subskill'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='Subskill'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
      {{/if}}
    {{/each}}
    </div>

    {{!-- Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">
      {{!-- As you add new fields, add them in here! --}}
      <div class="resource">
        <label class="resource-label">Roll Formula</label>
        <input type="text" name="system.formula" value="{{system.formula}}" data-dtype="String"/>
      </div>
    </div>
  </section>
</form>
